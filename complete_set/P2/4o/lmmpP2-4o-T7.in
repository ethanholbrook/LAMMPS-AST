# LAMMPS script for melting of bulk Ni
units           metal
dimension       3
boundary        p p p
atom_style      atomic

# Create an FCC Ni lattice and replicate
lattice         fcc 3.52
region          box block 0 10 0 10 0 10
create_box      1 box
create_atoms    1 box

# Define interatomic potential (Mishin et al. 1999 EAM)
pair_style      eam/alloy
pair_coeff      * * Ni99.eam.alloy Ni

# Set mass for Ni
mass            1 58.69

# Define simulation settings
velocity        all create 600.0 12345 mom yes rot yes dist gaussian

# Define fix for isothermal-isobaric ensemble (NPT) at 1 atm
fix             1 all npt temp 300.0 2500.0 100.0 iso 1.0 1.0 1000.0

# Run settings
timestep        0.001
thermo          100
thermo_style    custom step temp press etotal
dump            1 all custom 1000 dump.melting id type x y z

# Run simulation for (2500 K - 300 K) / (10 K per ps) = 220 ps
run             220000
