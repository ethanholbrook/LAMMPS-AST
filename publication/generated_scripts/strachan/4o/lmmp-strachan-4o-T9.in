# LAMMPS script for 2D Lennard-Jones system simulation with parameters

units lj
dimension 2
atom_style atomic

# Variables for customized parameters
variable sigma equal 1.0
variable epsilon equal 1.0
variable rc equal 3.0*${sigma}

variable rho1 equal 0.75/(v_sigma*v_sigma)
variable rho2 equal 0.8/(v_sigma*v_sigma)

# Create a 2D box for periodic system
variable L1 equal sqrt(100/${rho1})
variable L2 equal sqrt(100/${rho2})

region box1 block 0 ${L1} 0 ${L1} -0.1 0.1
region box2 block 0 ${L2} 0 ${L2} -0.1 0.1

create_box 1 box1
create_box 1 box2

# Initial configurations for different scenarios
region circ drop-like 50 50 0 20 units box

create_atoms 1 random 100 12345 NULL

mass 1 1.0
neighbor 0.3 bin
neigh_modify every 1 delay 0 check yes

# Define Lennard-Jones potential with cutoff
pair_style lj/cut ${rc}
pair_coeff 1 1 ${epsilon} ${sigma} ${rc}

# Integration settings
variable t0 equal sqrt((v_sigma^2*1.0)/(48*${epsilon}))
variable tint equal 0.0025*v_t0

timestep ${tint}

thermo_style custom step temp pe ke etotal press
thermo 100

# Set up NVE ensemble for various energies
fix 1 all nve

# Setting velocities and constraints
# Here we assume initial configuration has been prepared
# using some external means to achieve desired E, rho

velocity all create 1.0 12345

# Run simulations for different initial conditions
label loop

variable i loop 4
   clear
   if "${i} == 1" then {"create_atoms 1 box1 & set e -1.1*${epsilon}"}
   if "${i} == 2" then {"create_atoms 1 box1 & set e -0.55*${epsilon}"}
   if "${i} == 3" then {"create_atoms 1 box1 & set e 0.8*${epsilon}"}
   if "${i} == 4" then {"create_atoms 1 box2 & set e -0.3*${epsilon}"}

   run 10000 # adjust number of steps based on scenario

next i
jump SELF loop